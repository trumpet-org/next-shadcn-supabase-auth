{
	"name": "nextjs-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"format": "biome format --write .",
		"lint:check": "biome lint . && eslint .",
		"lint:fix": "biome lint --fix . && eslint --fix .",
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky",
		"start": "next start",
		"test": "NODE_NO_WARNINGS=1 vitest",
		"test:coverage": "pnpm run test --coverage",
		"test:watch": "pnpm run test --watch --coverage",
		"ui": "pnpm dlx shadcn@latest"
	},
	"lint-staged": {
		"*.{js,cjs,mjs,jsx,mjsx,cjsx,ts,tsx,mts,cjs,mtsx,ctsx,json,html,css}": "biome format --write",
		"*.{js,cjs,mjs,jsx,mjsx,cjsx,ts,tsx,mts,cjs,mtsx,ctsx}": ["biome lint --fix", "eslint --fix --no-warn-ignored"]
	},
	"dependencies": {
		"@formatjs/intl-localematcher": "^0.5.4",
		"@hookform/resolvers": "^3.9.0",
		"@icons-pack/react-simple-icons": "^10.0.0",
		"@radix-ui/react-label": "^2.1.0",
		"@radix-ui/react-slot": "^1.1.0",
		"@radix-ui/react-toast": "^1.2.1",
		"@supabase/ssr": "^0.5.1",
		"@supabase/supabase-js": "^2.45.4",
		"@t3-oss/env-nextjs": "^0.11.1",
		"@tool-belt/type-predicates": "^1.3.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"lucide-react": "^0.445.0",
		"negotiator": "^0.6.3",
		"next": "14.2.13",
		"next-themes": "^0.3.0",
		"pino": "^9.4.0",
		"pino-http": "^10.3.0",
		"pino-pretty": "^11.2.2",
		"react": "^18.3.1",
		"react-day-picker": "9.1.2",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.53.0",
		"sonner": "^1.5.0",
		"validator": "^13.12.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@basemind/eslint-config-next": "^0.2.0",
		"@biomejs/biome": "^1.9.2",
		"@commitlint/config-conventional": "^19.5.0",
		"@faker-js/faker": "^9.0.1",
		"@tailwindcss/forms": "^0.5.9",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.5.0",
		"@testing-library/react": "^16.0.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/negotiator": "^0.6.3",
		"@types/node": "^22.5.5",
		"@types/react": "^18.3.8",
		"@types/react-dom": "^18.3.0",
		"@types/validator": "^13.12.2",
		"@vitejs/plugin-react": "^4.3.1",
		"@vitest/coverage-v8": "^2.1.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.11.0",
		"husky": "^9.1.6",
		"interface-forge": "^2.0.1",
		"jiti": "2.0.0-beta.3",
		"jsdom": "^25.0.1",
		"lint-staged": "^15.2.10",
		"next-router-mock": "^0.9.13",
		"postcss": "^8.4.47",
		"tailwind-merge": "^2.5.2",
		"tailwindcss": "^3.4.12",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.6.2",
		"typescript-eslint": "^8.6.0",
		"vite-tsconfig-paths": "^5.0.1",
		"vitest": "^2.1.1"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"pnpm": {
		"peerDependencyRules": {
			"allowAny": ["eslint", "react", "react-dom"]
		}
	}
}
